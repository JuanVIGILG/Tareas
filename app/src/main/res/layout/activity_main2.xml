<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="405dp"
        android:layout_height="27dp"
        android:background="?android:attr/autofilledHighlight"
        android:text="                                       PANEL DE CONTROL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/btnregistro"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:background="@color/teal_200"
        android:text="REGRISTRO DE PERSONAS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <Button
        android:id="@+id/btnactualizar"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:background="@color/teal_200"
        android:text="ACTUALIZAR REGISTRO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnregistro"
        app:layout_constraintVertical_bias="0.089" />

    <Button
        android:id="@+id/btnlista"
        android:layout_width="221dp"
        android:layout_height="50dp"
        android:background="@color/teal_200"
        android:text="LISTA DE REGISTROS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnactualizar"
        app:layout_constraintVertical_bias="0.123" />

    <Button
        android:id="@+id/btncombo"
        android:layout_width="224dp"
        android:layout_height="57dp"
        android:background="@color/teal_200"
        android:text="COMBOBOX"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnlista"
        app:layout_constraintVertical_bias="0.156" />
</android.support.constraint.ConstraintLayout>